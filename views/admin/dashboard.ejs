<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    .container {
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 250px;
      background-color: #2e3b4e;
      color: #fff;
      padding-top: 20px;
    }

    .sidebar .logo {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .sidebar .logo img {
      border-radius: 50%;
      width: 70px; /* Adjust size for visibility */
      height: 70px;
    }

    .sidebar nav ul {
      list-style: none;
      padding: 20px 0;
    }

    .sidebar nav ul li a {
      display: block;
      padding: 10px 20px;
      color: #fff;
      text-decoration: none;
    }

    .sidebar nav ul li a:hover {
      background-color: #3f4d63;
    }

    .main-content {
      flex: 1;
      background-color: #1b2533;
      color: #fff;
      padding: 20px;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-bottom: 20px;
    }

    .search-bar input {
      padding: 5px;
      border: none;
      border-radius: 5px;
    }

    .profile {
      display: flex;
      align-items: center;
    }

    .profile i {
      font-size: 40px; /* Admin icon size */
      color: #fff;
      margin-right: 10px;
    }

    .logout-btn {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      background-color: #dc3545;
      color: white;
      cursor: pointer;
    }

    .logout-btn:hover {
      background-color: #c82333;
    }

    .stats {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
    }

    .stat-card {
      background-color: #374b66;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      width: 100%;
    }

    .stat-card h3 {
      margin-bottom: 10px;
      font-size: 1.2rem;
    }

    .stat-card p {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .charts {
      display: flex;
      gap: 20px;
    }

    .chart-container {
      background-color: #374b66;
      padding: 20px;
      border-radius: 10px;
      flex: 1;
    }

    .chart-container h3 {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="logo">
        <img src="/images/agri_logo.jpeg" alt="Logo">
      </div>
      <nav>
        <ul>
          <li><a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
          <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
          <li><a href="/admin/orders"><i class="fas fa-shopping-cart"></i> Orders</a></li>
          <li><a href="/admin/messages"><i class="fas fa-comments"></i> Messages</a></li>
          <li><a href="/admin/accounts"><i class="fas fa-users"></i> Accounts</a></li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <header>
        <div class="search-bar">
          <input type="text" placeholder="Search">
          <button><i class="fas fa-search"></i></button>
        </div>
        <div class="profile">
          <i class="fas fa-user-circle"></i>
          <button class="logout-btn" onclick="confirmLogout()">Logout</button>
        </div>
      </header>

      <section class="stats">
        <div class="stat-card">
          <h3>Total Sales</h3>
          <p>30,500</p>
        </div>
        <div class="stat-card">
          <h3>Total Income</h3>
          <p>37,150</p>
        </div>
        <div class="stat-card">
          <h3>Orders Paid</h3>
          <p>30,500</p>
        </div>
        <div class="stat-card">
          <h3>Pending Orders</h3>
          <p>19,000</p>
        </div>
      </section>

      <section class="charts">
        <div class="chart-container">
          <h3>Recent Orders</h3>
          <canvas id="recentOrdersChart"></canvas>
        </div>
        <div class="chart-container">
          <h3>Total Sales</h3>
          <canvas id="totalSalesChart"></canvas>
        </div>
      </section>
    </main>
  </div>

  <script>
    // Sample chart data (use real data in production)
    const recentOrdersCtx = document.getElementById('recentOrdersChart').getContext('2d');
    const recentOrdersChart = new Chart(recentOrdersCtx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Orders',
          data: [12, 19, 3, 5, 2, 3],
          borderColor: 'rgb(75, 192, 192)',
          tension: 0.1
        }]
      }
    });

    const totalSalesCtx = document.getElementById('totalSalesChart').getContext('2d');
    const totalSalesChart = new Chart(totalSalesCtx, {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [{
          label: 'Sales',
          data: [50, 40, 60, 70, 50, 80],
          backgroundColor: 'rgb(75, 192, 192)'
        }]
      }
    });

    function confirmLogout() {
      if (confirm("Are you sure you want to log out?")) {
        window.location.href = '/login'; // Redirect to logout route
      }
    }
  </script>
</body>
</html>
